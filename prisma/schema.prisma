model InternalState {
  id      String @id @default(cuid())
  agentId String @unique

  // Current Emotions (JSON con intensidades 0-1)
  // { "joy": 0.4, "interest": 0.6, "anxiety": 0.2, "affection": 0.5, ... }
  currentEmotions Json

  // PAD Mood Model
